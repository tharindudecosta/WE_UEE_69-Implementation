    <TextView
        android:id="@+id/tvCusLoginBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28sp"
        android:layout_marginTop="32sp"
        android:text="@string/login"
        android:textColor="@color/bob"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:text="@string/welcomeBack"
        android:textColor="@color/bob"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCusLoginBanner" />

    <Button
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="112sp"
        android:background="@color/transparent_colour"
        android:text="@string/createAccount2"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sigin" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:backgroundTint="#92000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:text="@string/aboutus"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290sp"
            android:layout_marginTop="20sp"
            android:text="@string/follow"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="80sp"
            android:text="@string/term"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/contactus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="50sp"
            android:text="@string/contactus"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="22sp"
            android:layout_height="21sp"
            android:layout_marginLeft="270sp"
            android:layout_marginTop="45sp"
            android:backgroundTint="#ffffff"
            app:tint="#ffffff"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="23sp"
            android:layout_height="23sp"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="44sp"
            app:tint="#ffffff"
            app:srcCompat="@drawable/instagram" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginLeft="330sp"
            android:layout_marginTop="43sp"
            app:tint="#ffffff"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="22sp"
            android:layout_height="21sp"
            android:layout_marginLeft="360sp"
            android:layout_marginTop="45sp"
            app:tint="#ffffff"
            app:srcCompat="@drawable/tiktok_new" />

<!--        <Button-->
