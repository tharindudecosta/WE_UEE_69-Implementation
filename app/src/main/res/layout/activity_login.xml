<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Functions.Common.LoginUser"
        android:background="@drawable/signupback">
<!--        android:id="@+id/drawerLayout"-->

    <EditText
        android:id="@+id/lemail"
        android:layout_width="343sp"
        android:layout_height="50sp"
        android:layout_marginTop="72sp"
        android:background="@drawable/roundstyle_2"
        android:backgroundTint="@color/welcome"
        android:backgroundTintMode="src_in"
        android:hint="@string/email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="20sp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/lpassword"
        android:layout_width="343sp"
        android:layout_height="50sp"
        android:layout_marginTop="45sp"
        android:background="@drawable/roundstyle_2"
        android:backgroundTint="@color/welcome"
        android:backgroundTintMode="src_in"
        android:hint="@string/password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingHorizontal="20sp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lemail" />

    <Button
        android:id="@+id/sigin"
        android:layout_width="197sp"
        android:layout_height="53sp"
        android:layout_marginStart="100sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="100sp"
        android:background="@drawable/roundstyle"
        android:text="Sign In"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lpassword" />

