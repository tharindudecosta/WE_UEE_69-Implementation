<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupback"
    tools:context=".LoginAdmin">


    <TextView
        android:id="@+id/tvAdminLoginBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginTop="44sp"
        android:text="Admin Login"
        android:textColor="@color/bob"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginTop="96sp"
        android:text="Welcome Back"
        android:textColor="#B3222020"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/demail"
        android:layout_width="343sp"
        android:layout_height="50sp"
        android:layout_marginStart="34sp"
        android:layout_marginTop="176sp"
        android:layout_marginEnd="34sp"
        android:background="@drawable/roundstyle_2"
        android:backgroundTint="@color/welcome"
        android:backgroundTintMode="src_in"
        android:hint="   E-mail"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="20sp"
        android:selectAllOnFocus="true"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dpassword"
        android:layout_width="343sp"
        android:layout_height="50sp"
        android:layout_marginStart="34sp"
        android:layout_marginTop="28sp"
        android:layout_marginEnd="34sp"
        android:background="@drawable/roundstyle_2"
        android:backgroundTint="@color/welcome"
        android:backgroundTintMode="src_in"
        android:hint="   Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingHorizontal="20sp"
        android:selectAllOnFocus="true"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/demail" />

    <!--        <Button-->
    <!--            android:id="@+id/dcreate"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_marginStart="80sp"-->
    <!--            android:layout_marginTop="10sp"-->
    <!--            android:layout_marginEnd="80sp"-->
    <!--            android:background="@color/green4"-->
    <!--            android:text="New user?   Sign up here"-->
    <!--            android:textColor="#000000"-->
    <!--            android:textSize="15sp"-->
    <!--            app:layout_constraintEnd_toEndOf="parent"-->
    <!--            app:layout_constraintStart_toStartOf="parent"-->
    <!--            app:layout_constraintTop_toBottomOf="@+id/dsignin" />-->


    <Button
        android:id="@+id/dsignin"
        android:layout_width="197sp"
        android:layout_height="53sp"
        android:layout_marginStart="100sp"
        android:layout_marginTop="48sp"
        android:layout_marginEnd="100sp"
        android:background="@drawable/roundstyle_2"
        android:backgroundTint="@color/button_white"
        android:text="Sign In"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dpassword" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="409sp"
        android:layout_height="150sp"
        android:backgroundTint="#92000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:text="@string/aboutus"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290sp"
            android:layout_marginTop="20sp"
            android:text="@string/follow"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="80sp"
            android:text="@string/term"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/contactus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="50sp"
            android:text="@string/contactus"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="22sp"
            android:layout_height="21sp"
            android:layout_marginLeft="270sp"
            android:layout_marginTop="45sp"
            android:backgroundTint="#ffffff"
            app:srcCompat="@drawable/facebook"
            app:tint="#ffffff" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="23sp"
            android:layout_height="23sp"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="44sp"
            app:srcCompat="@drawable/instagram"
            app:tint="#ffffff" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginLeft="330sp"
            android:layout_marginTop="43sp"
            app:srcCompat="@drawable/twitter"
            app:tint="#ffffff" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="22sp"
            android:layout_height="21sp"
            android:layout_marginLeft="360sp"
            android:layout_marginTop="45sp"
            app:srcCompat="@drawable/tiktok_new"
            app:tint="#ffffff" />

        <Button
            android:id="@+id/cusLogin"
            android:layout_width="145sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250sp"
            android:layout_marginTop="80sp"
            android:backgroundTint="@color/transparent"
            android:text="Customer Login"
            android:textColor="#ffffff" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
