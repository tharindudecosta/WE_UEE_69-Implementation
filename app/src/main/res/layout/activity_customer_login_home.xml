<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".Functions.Customers.CustomerLoginMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bk">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Shop"
                android:textAlignment="center"
                android:textColor="#0C0B0B"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnShop" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Orders"
                android:textAlignment="center"
                android:textColor="#0C0B0B"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnOrders" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64sp"
                android:text="@string/MyProfile"
                android:textAlignment="center"
                android:textColor="#0C0B0B"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnMyProfile" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64sp"
                android:text="@string/MyUploads"
                android:textAlignment="center"
                android:textColor="#0C0B0B"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnMyUploads" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Appointments"
                android:textAlignment="center"
                android:textColor="#0C0B0B"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/btnAppointments" />

            <ImageButton
                android:id="@+id/btnAppointments"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginTop="12sp"
                android:background="@drawable/tile_button"
                android:padding="25sp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_icon_schedule"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnOrders"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <ImageButton
                android:id="@+id/btnMyUploads"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginTop="16sp"
                android:background="@drawable/tile_button"
                android:padding="25sp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_icon_file"
                android:textColor="#FFFAFA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnMyProfile"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <ImageButton
                android:id="@+id/btnMyProfile"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginTop="16sp"
                android:background="@drawable/tile_button"
                android:padding="25sp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_icon_user"
                android:textColor="#FFFAFA"
                app:layout_constraintEnd_toStartOf="@+id/btnMyUploads"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <ImageButton
                android:id="@+id/btnOrders"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginTop="12sp"
                android:background="@drawable/tile_button"
                android:padding="25sp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_icon_mortar"
                android:textColor="#FFFAFA"
                app:layout_constraintEnd_toStartOf="@+id/btnAppointments"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <ImageButton
                android:id="@+id/btnShop"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginTop="64sp"
                android:background="@drawable/tile_button"
                android:padding="25sp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_icon_shopping_cart"
                android:textColor="#FFFCFC"
                app:layout_constraintEnd_toStartOf="@+id/btnDoctors"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageButton
                android:id="@+id/btnDoctors"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginTop="64sp"
                android:background="@drawable/tile_button"
                android:padding="25sp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_icon_mortar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnShop"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28sp"
                android:layout_marginTop="36sp"
                android:background="@color/transparent_colour"
                android:text="@string/CusHome"
                android:textAlignment="center"
                android:textColor="@color/homeTitleGreen"
                android:textSize="45sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Doctors"
                android:textAlignment="center"
                android:textColor="#0C0B0B"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/btnDoctors" />

            <Button
                android:id="@+id/btnMyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44sp"
                android:layout_marginEnd="48sp"
                android:background="@drawable/misc_yellow_btn"
                android:padding="9sp"
                android:text="My Cart"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/xnav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>