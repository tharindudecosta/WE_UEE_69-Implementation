<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Functions.Doctors.DoctorAdd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bk">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/dregisterbutton"
                android:layout_width="216sp"
                android:layout_height="50sp"
                android:layout_marginStart="34sp"
                android:layout_marginTop="52sp"
                android:layout_marginEnd="34sp"
                android:background="@drawable/roundstyle_2"
                android:backgroundTint="@color/button2"
                android:text="@string/submit"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvImageName"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/docAddress"
                android:layout_width="343sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28sp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/welcome"
                android:backgroundTintMode="src_in"
                android:drawableLeft="@drawable/baseline_local_hospital_24"
                android:hint="@string/address"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="15sp"
                android:paddingHorizontal="20sp"
                android:selectAllOnFocus="true"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dcontactnum" />

            <EditText
                android:id="@+id/dcontactnum"
                android:layout_width="343sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/welcome"
                android:backgroundTintMode="src_in"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:hint="@string/contact"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:padding="15sp"
                android:paddingHorizontal="20sp"
                android:selectAllOnFocus="true"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/docEmail" />

            <EditText
                android:id="@+id/docEmail"
                android:layout_width="343sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/welcome"
                android:backgroundTintMode="src_in"
                android:drawableLeft="@drawable/baseline_email_24"
                android:hint="@string/email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"

                android:padding="15sp"
                android:paddingHorizontal="20sp"
                android:selectAllOnFocus="true"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/docName" />

            <Button
                android:id="@+id/docregbutton"
                android:layout_width="277sp"
                android:layout_height="62sp"
                android:layout_marginStart="60sp"
                android:layout_marginTop="32sp"
                android:layout_marginEnd="60sp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/transparent_colour"
                android:text="@string/newDoctor"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/docName"
                android:layout_width="343sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28sp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/welcome"
                android:backgroundTintMode="src_in"
                android:drawableLeft="@drawable/baseline_person_24"
                android:hint="@string/fullName"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="15sp"
                android:paddingHorizontal="20sp"
                android:selectAllOnFocus="true"
                android:textColor="#020202"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/docregbutton" />


            <EditText
                android:id="@+id/docPass"
                android:layout_width="343sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28sp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/welcome"
                android:backgroundTintMode="src_in"
                android:drawableLeft="@drawable/baseline_password_24"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="15sp"
                android:paddingHorizontal="20sp"
                android:selectAllOnFocus="true"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerLayout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spinnerLayout"
                android:layout_width="343sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28sp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/docAddress">


                <Spinner
                    android:id="@+id/spnSpecialization"
                    android:layout_width="343sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/welcome"
                    android:entries="@array/doctorSpecialization"
                    android:padding="15sp"
                    android:paddingHorizontal="20sp"
                    android:textColor="#020202"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24sp"
                android:layout_marginTop="20sp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/btnUploadImage"
                app:layout_constraintTop_toBottomOf="@+id/docPass" />

            <TextView
                android:id="@+id/tvImageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32sp"
                android:layout_marginTop="16sp"
                android:text="Image"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnUploadImage" />

            <Button
                android:id="@+id/btnUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32sp"
                android:layout_marginTop="28sp"
                android:backgroundTint="@color/btnUploadImg"
                android:text="@string/addImage"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/docPass" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>