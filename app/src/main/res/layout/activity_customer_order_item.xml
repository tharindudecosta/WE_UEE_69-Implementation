<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Functions.Customers.CustomerOrderItem">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bk"
        tools:layout_editor_absoluteX="-16sp"
        tools:layout_editor_absoluteY="125sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20sp">

                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/productName"
                        android:textColor="@color/black"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="56dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="118sp"
                        android:layout_height="wrap_content"
                        android:text="@string/productUnitPrice"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="134dp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="113sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="200dp"
                        android:text="Unit Price"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="234dp"
                        tools:layout_editor_absoluteY="134dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="170sp"
                        android:layout_height="wrap_content"
                        android:text="@string/productDesc"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="228dp" />

                    <TextView
                        android:id="@+id/tvDesc"
                        android:layout_width="400sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="200dp"
                        android:text="Desc"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="239dp"
                        tools:layout_editor_absoluteY="228dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp">


                    <TextView
                        android:id="@+id/textView116"
                        android:layout_width="197sp"
                        android:layout_height="wrap_content"
                        android:text="@string/sellerName"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="390dp" />

                    <TextView
                        android:id="@+id/tvSellerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="200dp"
                        android:text="Seller Name"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="243dp"
                        tools:layout_editor_absoluteY="385dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shopName"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="504dp" />

                    <TextView
                        android:id="@+id/tvShopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="200dp"
                        android:text="Seller Name"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="243dp"
                        tools:layout_editor_absoluteY="385dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp">


                    <TextView
                        android:id="@+id/textView117"
                        android:layout_width="178sp"
                        android:layout_height="wrap_content"
                        android:text="@string/sellerPhone"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="590dp" />

                    <TextView
                        android:id="@+id/tvSellerTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="200dp"
                        android:text="Seller Name"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="243dp"
                        tools:layout_editor_absoluteY="385dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp">

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="312dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16sp"
                        android:background="@drawable/roundstyle_2"
                        android:ems="10"
                        android:hint="@string/enterQuantity"
                        android:inputType="number"
                        android:padding="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="697dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16sp"
                        android:layout_marginTop="40sp"
                        android:background="@drawable/roundstyle"
                        android:backgroundTint="@color/misc_yellow_btn_colour"
                        android:padding="20sp"
                        android:text="@string/finishOrder"
                        app:layout_constraintStart_toStartOf="parent"/>

                </RelativeLayout>

            </LinearLayout>













        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>